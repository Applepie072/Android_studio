<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1E29"
    tools:context=".SupportActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"

        android:src="@drawable/support_icon_arrow"
        tools:ignore="MissingConstraints"
        tools:translationX="55dp"
        tools:translationY="130dp" />

    //Round_background
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="331dp"

        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="360dp"

            android:background="@drawable/main_round_background"
            android:backgroundTint="#9916171F"

            android:translationX="-40dp"
            android:translationY="-90dp"
            android:rotation="40"

            tools:ignore="MissingConstraints"/>

    </LinearLayout>

    //Main_Title
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Support"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:textStyle="bold"

            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    //Support_link
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="* CLICK *"
            android:textColor="@color/white"
            android:textSize="37dp"
            android:textStyle="bold"

            android:layout_marginLeft="125dp"
            android:layout_marginTop="380dp"

            android:backgroundTint="#0016171F"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/support_link"
            android:autoLink="all"

            android:text="Toonation"
            android:textSize="37dp"
            android:textColor="#20B6E8"

            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"

            android:backgroundTint="#211936"/>

    </LinearLayout>

    //back
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/support_back"
        tools:ignore="MissingConstraints"

        android:text="Back"
        android:textColor="@color/white"
        android:textSize="22dp"

        android:translationX="270dp"
        android:translationY="650dp"

        android:backgroundTint="#9916171F"/>

</androidx.constraintlayout.widget.ConstraintLayout>