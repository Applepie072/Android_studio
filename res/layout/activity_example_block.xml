<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    tools:context=".example.Example_Block">

    //Round_background
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="331dp"

        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="360dp"

            android:background="@drawable/main_round_background"
            android:backgroundTint="#99373668"

            android:translationX="-40dp"
            android:translationY="-90dp"
            android:rotation="40"

            tools:ignore="MissingConstraints"/>

    </LinearLayout>

    //Main_Title
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Block"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:textStyle="bold"

            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    //example_text
    <ScrollView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:id="@+id/example_block_scrollView_button"

        android:orientation="vertical"
        android:translationY="100dp"
        android:translationX="20dp"

        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:id="@+id/layout">

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/example_block_visual"

                android:text="Visual"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textAlignment="center"

                android:backgroundTint="#CC232323"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/example_block_properties"

                android:text="Properties"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textAlignment="center"

                android:layout_marginTop="20dp"

                android:backgroundTint="#CC232323"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/example_block_advanced_properties"

                android:text="Advanced Properties"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textAlignment="center"

                android:layout_marginTop="20dp"

                android:backgroundTint="#CC232323"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/example_block_tile_entity"

                android:text="Tile entity"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textAlignment="center"

                android:layout_marginTop="20dp"

                android:backgroundTint="#CC232323"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/example_block_energy_fluid_storage"

                android:text="Energy\nFluid storage"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textAlignment="center"

                android:layout_marginTop="20dp"

                android:backgroundTint="#CC232323"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/example_block_generation"

                android:text="Generation"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textAlignment="center"

                android:layout_marginTop="20dp"

                android:backgroundTint="#CC232323"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/example_back"
        tools:ignore="MissingConstraints"

        android:text="Back"
        android:textColor="@color/white"
        android:textSize="22dp"

        android:translationX="280dp"
        android:translationY="670dp"

        android:backgroundTint="#252525"/>

</androidx.constraintlayout.widget.ConstraintLayout>